{
  "layout": "GridLayout",
  "zones": {
    "CollapsiblePanel": {
      "component": "CollapsiblePanel",
      "props": {
        "collapsed": true,
        "children": [
          {
            "component": "AudioOutputDeviceSelector",
            "props": {}
          },
          {
            "component": "GainSlider",
            "props": {}
          },
          {
            "component": "StartStopButton",
            "props": {
              "width": "100%"
            }
          },
          {
            "component": "ToneController",
            "props": {}
          },
          {
            "component": "SavedFrequencyDropdown",
            "props": {}
          },
          {
            "component": "HomeButton",
            "props": {
              "to": "/",
              "color": "primary",
              "placement": "bottom"
            }
          }
        ]
      }
    },

    "mainContent": {
      "component": "OscillogramGraph",
      "props": {
        "style": {
          "width": "100%",
          "height": "100%"
        }
      }
    },

    "leftPanel": {
      "component": "BasicPanel",
      "props": {
        "children": [
          { "component": "AudioOutputDeviceSelector", "props": {} },
          { "component": "GainSlider", "props": {} },
          { "component": "StartStopButton", "props": { "width": "40%" } },
          { "component": "ToneController", "props": {} },
          { "component": "SavedFrequencyDropdown", "props": {} }
        ]
      }
    },

    "homeButton": {
      "component": "HomeButton",
      "props": {
        "to": "/",
        "color": "primary"
      }
    }
  },

  "grid": {
    "xs": {
      "areas": [
        ["CollapsiblePanel"],
        ["mainContent"]
      ],
      "columns": ["1fr"],
      "rows": ["6%", "1fr"]
    },

    "lg": {
      "areas": [
        ["leftPanel", "mainContent"],
        ["homeButton", "mainContent"]
      ],
      "columns": ["2.1fr", "8fr"],
      "rows": ["1fr", "80px"]
    }
  }
}
