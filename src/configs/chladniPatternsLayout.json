{
  "layout": "GridLayout",
  "zones": {
    "CollapsiblePanel": {
      "component": "CollapsiblePanel",
      "props": {
        "collapsed": true,
        "children": [
          { "component": "ColorBlock", "props": { "color": "purple", "label": "One" } },
          { "component": "ColorBlock", "props": { "color": "gray", "label": "Two" } }
        ]
      }
    },
    "mainContent": {
      "component": "OscillogramGraph", "props": { "style": { "width": "100%", "height": "100%" } }
    },
    "leftPanel": {
      "component": "ToneController", "props": { "label": "Chladni Tone" }
    },
    "bottomPanel": {
      "component": "ColorBlock",
      "props": { "color": "green", "label": "Bottom Info Panel" }
    }
  },
  "grid": {
    "xs": {
      "areas": [
        ["CollapsiblePanel", "mainContent"],
        ["CollapsiblePanel", "bottomPanel"]
      ],
      "columns": ["55px", "1fr"],
      "rows": ["8fr", "1fr"]
    },
    "md": {
      "areas": [
        ["leftPanel", "mainContent"],
        ["leftPanel", "bottomPanel"]
      ],
      "columns": ["2fr", "8fr"],
      "rows": ["8fr", "1fr"]
    }
  }
}
