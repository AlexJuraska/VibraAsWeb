{
  "layout": "GridLayout",
  "zones": {
    "CollapsiblePanel": {
      "component": "CollapsiblePanel",
      "props": {
        "collapsed": true,
        "children": [
          { "component": "ColorBlock", "props": { "color": "purple", "label": "One" } },
          { "component": "ColorBlock", "props": { "color": "gray", "label": "Two" } }
        ]
      }
    },
    "mainContent": {
      "component": "ColorBlock",
      "props": { "color": "blue", "label": "Main Content" }
    },
    "leftPanel": {
      "component": "ColorBlock",
      "props": { "color": "orange", "label": "Left Info Panel" }
    },
    "bottomPanel": {
      "component": "ColorBlock",
      "props": { "color": "green", "label": "Bottom Info Panel" }
    }
  },
  "grid": {
    "xs": {
      "areas": [["CollapsiblePanel" ,"mainContent"],
                ["CollapsiblePanel" ,"bottomPanel"]],
      "columns": ["55px","1fr"],
      "rows": ["8fr", "1fr"]
    },
    "md": {
      "areas": [["leftPanel", "mainContent"],
                ["leftPanel", "bottomPanel"]],
      "columns": ["2fr", "8fr"],
      "rows": ["8fr", "1fr"]
    }
  }
}