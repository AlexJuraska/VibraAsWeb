{
  "layout": "GridLayout",
  "zones": {
    "CollapsiblePanel": {
      "component": "CollapsiblePanel",
      "props": {
        "collapsed": true,
        "children": [
          { "component": "AudioOutputDeviceSelector", "props": { "size": "medium"} },
          { "component": "GainSlider", "props": {} },
          { "component": "StartStopButton", "props": {} },
          { "component": "ToneController", "props": { "label": "chladni" } },
          { "component": "HomeButton", "props": { "to": "/", "color": "primary" } }
        ]
      }
    },
    "mainContent": {
      "component": "OscillogramGraph",
      "props": {
        "style": {
          "width": "100%",
          "height": "100%"
        }
      }
    },
    "leftPanel": {
      "component": "BasicPanel",
      "props": {
        "children": [
          { "component": "AudioOutputDeviceSelector", "props": { "size": "medium"} },
          { "component": "GainSlider", "props": {} },
          { "component": "StartStopButton", "props": {} },
          { "component": "ToneController", "props": { "label": "chladni" } }
        ]
      }
    },
    "homeButton": {
      "component": "HomeButton",
      "props": {
        "to": "/",
        "color": "primary"
      }
    }
  },
  "grid": {
    "xs": {
      "areas": [
        ["CollapsiblePanel"],
        ["mainContent"]
      ],
      "columns": ["1fr"],
      "rows": ["60px", "1fr"]
    },
    "xl": {
      "areas": [
        ["leftPanel", "mainContent"],
        ["homeButton", "mainContent"]
      ],
      "columns": ["2fr", "8fr"],
      "rows": ["1fr", "80px"]
    }
  }
}
