{
  "layout": "SlideLayout",
  "zones": {

    "CollapsiblePanel": {
      "component": "CollapsiblePanel",
      "props": {
        "collapsed": true,
        "children": [
          { "component": "AudioInputDeviceSelector", "props": {} },
          { "component": "AudioRecordButton", "props": {} },
          { "component": "AudioFileUploader", "props": {} },
          { "component": "AudioRecordingDebug", "props": {} }
        ]
      }
    },

    "mainContent": {
      "component": "AudioRecordingGraph",
      "props": {}
    },

    "topGraph": {
      "component": "AudioRecordingGraph",
      "props": {},
      "slideable": true,
      "slideLabel": "Top Graph",
      "slideDirection": "top",
      "slideGroup": "topBottom",
      "defaultOpen": true
    },

    "bottomGraph": {
      "component": "AudioRecordingGraph",
      "props": {},
      "slideable": true,
      "slideLabel": "Bottom Graph",
      "slideDirection": "bottom",
      "slideGroup": "topBottom",
      "defaultOpen": false
    },

    "leftPanel": {
      "component": "BasicPanel",
      "props": {
        "children": [
          { "component": "AudioInputDeviceSelector", "props": {} },
          { "component": "AudioRecordButton", "props": {} },
          { "component": "AudioFileUploader", "props": {} },
          { "component": "AudioRecordingDebug", "props": {} },
          { "component": "ColorBlock", "props": {"color":  "orange", "label":  "LeftPanel2"} }
        ]
      }
    }
  },

  "grid": {

    "xs": {
      "areas": [
        ["CollapsiblePanel"],
        ["mainContent"]
      ],
      "columns": ["1fr"],
      "rows": ["60px", "1fr"]
    },

    "xl": {
      "areas": [
        ["leftPanel", "topGraph"],
        ["leftPanel", "bottomGraph"]
      ],
      "columns": ["2fr", "8fr"],
      "rows": ["1fr", "1fr"]
    }
  }
}