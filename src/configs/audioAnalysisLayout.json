{
  "layout": "GridLayout",
  "zones": {
    "CollapsiblePanel": {
      "component": "CollapsiblePanel",
      "props": {
        "collapsed": true,
        "children": [
          { "component": "AudioInputDeviceSelector", "props": {} },
          { "component": "AudioRecordButton", "props": {} },
          { "component": "AudioFileUploader", "props": {} },
          { "component": "AudioRecordingDebug", "props": {} }
        ]
      }
    },
    "mainContent": {
      "component": "AudioRecordingGraph",
      "props": {}
    },
    "leftPanel": {
      "component": "BasicPanel",
      "props": {
        "children": [
          { "component": "AudioInputDeviceSelector", "props": {} },
          { "component": "AudioRecordButton", "props": {} },
          { "component": "AudioFileUploader", "props": {} },
          { "component": "AudioRecordingDebug", "props": {} },
          { "component": "ColorBlock", "props": {"color":  "orange", "label":  "LeftPanel2"} }
        ]
      }
    },
    "bottomPanel": {
      "component": "BasicPanel",
      "props": {
        "children": [
          { "component": "ColorBlock", "props": {"color":  "yellow", "label":  "BottomPanel"} }
        ]
      }
    }
  },
  "grid": {
    "xs": {
      "areas": [
        ["CollapsiblePanel"],
        ["mainContent"]
      ],
      "columns": ["1fr"],
      "rows": ["60px", "1fr"]
    },
    "xl": {
      "areas": [
        ["leftPanel", "mainContent"],
        ["leftPanel","bottomPanel"]
      ],
      "columns": ["2fr", "8fr"],
      "rows": ["1fr", "80px"]
    }
  }
}
